---
import BrandLogo from "./BrandLogo.astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/services", label: "Services" },
  { href: "/ai-analytics-conversion", label: "Analytics" },
  { href: "/blog", label: "Insights" },
  { href: "/contact", label: "Contact" },
];
---

<header class="site-header">
  <div class="header-inner">
    <BrandLogo />

    <nav class="main-nav">
      <ul>
        {navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))}
      </ul>

      <a href="/digital-credibility-score-audit" class="primary-cta">
        Get DCS Audit
      </a>
    </nav>
  </div>
</header>
