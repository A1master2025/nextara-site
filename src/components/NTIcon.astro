  check: `<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-linecap="round" stroke-linejoin="round"/>`
};

const svgContent = icons[name];
---

{svgContent && (
  <svg
    width={size}
    height={size}
    stroke={color}
    stroke-width={stroke}
    fill="none"
    viewBox="0 0 24 24"
    class={cls}
    aria-hidden="true"
    set:html={svgContent}
  />
)}