---
const {
  name = "scorecard",
  size = 24,
  color = "var(--color-icon-default)",
  stroke = 1.75,
  class: cls = "",
} = Astro.props;

// Icon Registry
const icons: Record<string, string> = {
  scorecard: `
    <rect x="4" y="4" width="16" height="16" rx="2" />
    <path d="M8 10h4" />
    <path d="M8 14h6" />
    <path d="M8 18h8" />
  `,
  compass: `
    <circle cx="12" cy="12" r="9" />
    <polygon points="10 10 16 8 14 14 8 16 10 10" />
    <circle cx="12" cy="12" r="1" />
  `,
  trust: `
    <path d="M4 10a8 8 0 0 1 16 0c0 7-6 10-8 11-2-1-8-4-8-11z" />
    <path d="M9 12l2 2 4-4" />
  `,
  target: `
    <circle cx="12" cy="12" r="8" />
    <circle cx="12" cy="12" r="4" />
    <circle cx="12" cy="12" r="1" />
  `,
  roadmap: `
    <path d="M5 4h6l3 2h5v14h-6l-3-2H5z" />
    <path d="M11 6v14" />
    <path d="M9 9h2" />
    <path d="M9 13h2" />
    <path d="M9 17h2" />
  `,

// CIP icons - Gradient capsule system
cip_conversion: `
  <defs>
    <linearGradient id="grad-conversion" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#4F7BA8;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#6B9BD1;stop-opacity:0.4" />
    </linearGradient>
  </defs>
  <rect x="3" y="8" width="18" height="8" rx="4" fill="url(#grad-conversion)" />
  <path d="M7 12h3" stroke-width="2" />
  <path d="M14 12l3-2m0 4l-3-2" />
`,

cip_telemetry: `
  <defs>
    <linearGradient id="grad-telemetry" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#5A8BB8;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#7AA5D1;stop-opacity:0.4" />
    </linearGradient>
  </defs>
  <rect x="3" y="8" width="18" height="8" rx="4" fill="url(#grad-telemetry)" />
  <path d="M6 12h2m2 0h2m2 0h2m2 0h2" stroke-width="2" stroke-dasharray="0.5 1.5" />
`,

cip_insights: `
  <defs>
    <linearGradient id="grad-insights" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#6B9BD1;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#8BB5E3;stop-opacity:0.4" />
    </linearGradient>
  </defs>
  <rect x="3" y="8" width="18" height="8" rx="4" fill="url(#grad-insights)" />
  <circle cx="10" cy="12" r="2.5" />
  <path d="M12 13.5l4 2" />
`,

cip_diagnostics: `
  <defs>
    <linearGradient id="grad-diagnostics" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#4A6B8A;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#6A8BAA;stop-opacity:0.4" />
    </linearGradient>
  </defs>
  <rect x="3" y="8" width="18" height="8" rx="4" fill="url(#grad-diagnostics)" />
  <path d="M8 10v4m4-4v4m4-4v4" stroke-width="1.5" />
`,
};

const svgContent = icons[name] ?? icons.scorecard;
const pixelSize = typeof size === "number" ? size : 24;
---

{svgContent && (
  <svg
    class={`nt-icon ${cls}`}
    xmlns="http://www.w3.org/2000/svg"
    width={pixelSize}
    height={pixelSize}
    viewBox="0 0 24 24"
    fill="none"
    stroke={color}
    stroke-width={stroke}
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
    set:html={svgContent}
  />
)}
