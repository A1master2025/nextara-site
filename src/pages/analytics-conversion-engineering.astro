  <!-- DIOS Telemetry Script - ACE Landing Page -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      // DIOS Config - governance locked, do not modify event names or structure
      const DIOS_CONFIG = Object.freeze({
  page: 'analytics-conversion-engineering',
  page_version: '1.2',
  form_type: 'ace_audit_request'
});


      // Ensure dataLayer exists
      window.dataLayer = window.dataLayer || [];

      // Section view tracking
      const sections = document.querySelectorAll('[data-nt-section]');
      const observed = new Set();

      const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && entry.intersectionRatio >= 0.5) {
            const section = entry.target.dataset.ntSection;
            if (!observed.has(section)) {
              observed.add(section);
              window.dataLayer.push({
                event: 'ace_section_view',
                section_name: section,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });
              sectionObserver.unobserve(entry.target);
            }
          }
        });
      }, { threshold: 0.5 });

      sections.forEach(section => sectionObserver.observe(section));

      // Form telemetry
      const form = document.getElementById('ace-audit-form');
      let formStartFired = false;

      if (form) {
        // Form start - fires once on first interaction
        const formFields = form.querySelectorAll('input, textarea, select');
        formFields.forEach(field => {
          field.addEventListener('focus', () => {
            if (!formStartFired) {
              formStartFired = true;
              window.dataLayer.push({
                event: 'ace_form_start',
                form_type: DIOS_CONFIG.form_type,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });
            }
          }, { once: true });
        });

        // Form validation and submission
        form.addEventListener('submit', (e) => {
          e.preventDefault();

          const formData = new FormData(form);
          const errors = [];

          // Validation rules
          if (!formData.get('name')?.trim()) errors.push('name');
          if (!formData.get('email')?.trim() || !formData.get('email').includes('@')) errors.push('email');
          if (!formData.get('company')?.trim()) errors.push('company');
          if (!formData.get('website')?.trim()) errors.push('website');

          const errorContainer = document.getElementById('ace-form-errors');
          const successContainer = document.getElementById('ace-form-success');

          if (errors.length > 0) {
            // Validation error
            window.dataLayer.push({
              event: 'ace_form_validation_error',
              form_type: DIOS_CONFIG.form_type,
              error_fields: errors,
              page: DIOS_CONFIG.page,
              page_version: DIOS_CONFIG.page_version,
              timestamp: new Date().toISOString()
            });

            errorContainer.textContent = `Please complete the following fields: ${errors.join(', ')}`;
            errorContainer.style.display = 'block';
            errorContainer.focus();
          } else {
            // Valid submission
            window.dataLayer.push({
              event: 'ace_form_submit',
              form_type: DIOS_CONFIG.form_type,
              page: DIOS_CONFIG.page,
              page_version: DIOS_CONFIG.page_version,
              timestamp: new Date().toISOString()
            });

            // Simulate success (replace with actual backend call)
            setTimeout(() => {
              window.dataLayer.push({
                event: 'ace_form_success',
                form_type: DIOS_CONFIG.form_type,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });

              form.style.display = 'none';
              errorContainer.style.display = 'none';
              successContainer.style.display = 'block';
              successContainer.focus();
            }, 500);
          }
        });
      }
    });
  </script>

