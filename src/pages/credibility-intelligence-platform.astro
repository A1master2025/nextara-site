  <!-- DIOS Telemetry Script -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const DIOS_CONFIG = Object.freeze({
        page: 'credibility-intelligence-platform',
        page_version: '1.0.0',
        form_type: 'cip_briefing_request'
      });

      window.dataLayer = window.dataLayer || [];

      // Section view tracking
      const sections = document.querySelectorAll('[data-nt-section]');
      const observed = new Set();

      const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && entry.intersectionRatio >= 0.5) {
            const section = entry.target.dataset.ntSection;
            if (!observed.has(section)) {
              observed.add(section);
              window.dataLayer.push({
                event: 'cip_section_view',
                section_name: section,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });
              sectionObserver.unobserve(entry.target);
            }
          }
        });
      }, { threshold: 0.5 });

      sections.forEach(section => sectionObserver.observe(section));

      // Form telemetry
      const form = document.getElementById('cip-briefing-form');
      if (form) {
        let formStartFired = false;

        const fields = form.querySelectorAll('input, textarea, select');
        fields.forEach(field => {
          field.addEventListener('focus', () => {
            if (!formStartFired) {
              formStartFired = true;
              window.dataLayer.push({
                event: 'cip_form_start',
                form_type: DIOS_CONFIG.form_type,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });
            }
          }, { once: true });
        });

        form.addEventListener('submit', (e) => {
          e.preventDefault();
          const formData = new FormData(form);
          const errors = [];

          if (!formData.get('name')?.trim()) errors.push('name');
          if (!formData.get('email')?.trim() || !formData.get('email').includes('@')) errors.push('email');
          if (!formData.get('company')?.trim()) errors.push('company');
          if (!formData.get('website')?.trim()) errors.push('website');

          const errorContainer = document.getElementById('cip-form-errors');
          const successContainer = document.getElementById('cip-form-success');

          if (errors.length > 0) {
            window.dataLayer.push({
              event: 'cip_form_validation_error',
              form_type: DIOS_CONFIG.form_type,
              error_fields: errors,
              page: DIOS_CONFIG.page,
              page_version: DIOS_CONFIG.page_version,
              timestamp: new Date().toISOString()
            });

            if (errorContainer) {
              errorContainer.textContent = `Please complete: ${errors.join(', ')}`;
              errorContainer.style.display = 'block';
              errorContainer.focus();
            }
            if (successContainer) successContainer.style.display = 'none';
          } else {
            window.dataLayer.push({
              event: 'cip_form_submit',
              form_type: DIOS_CONFIG.form_type,
              page: DIOS_CONFIG.page,
              page_version: DIOS_CONFIG.page_version,
              timestamp: new Date().toISOString()
            });

            // TODO: Replace with real API endpoint
            setTimeout(() => {
              window.dataLayer.push({
                event: 'cip_form_success',
                form_type: DIOS_CONFIG.form_type,
                page: DIOS_CONFIG.page,
                page_version: DIOS_CONFIG.page_version,
                timestamp: new Date().toISOString()
              });

              form.style.display = 'none';
              if (errorContainer) errorContainer.style.display = 'none';
              if (successContainer) {
                successContainer.style.display = 'block';
                successContainer.focus();
              }
            }, 500);
          }
        });
      }

      // CTA click tracking
      document.querySelectorAll('[data-nt-event]').forEach(el => {
        el.addEventListener('click', () => {
          window.dataLayer.push({
            event: el.dataset.ntEvent,
            page: DIOS_CONFIG.page,
            page_version: DIOS_CONFIG.page_version,
            timestamp: new Date().toISOString()
          });
        });
      });
    });
  </script>

