---
import "../styles/global.css";
import "../styles/header.css";


const {
  title = "Digital Credibility Score Websites & Technical SEO | NexTara AI Solutions",
  description = "NexTara AI Solutions rebuilds websites to achieve 900+ Digital Credibility Scores across SEO, accessibility, performance, and analytics integrity."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Tag Manager -->
    <script>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-N6HDR6L7');
    </script>
    <!-- End Google Tag Manager -->

    <!-- Page-level head slot (leave as-is for per-page meta, etc.) -->
    <slot name="head" />
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-N6HDR6L7"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->


    <main>
      <slot />
    </main>
  </body>
</html>
